<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foodNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Kuru fasülye"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caloriTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="600 kcal"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/proteinTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTV" />

    <TextView
        android:id="@+id/proteinTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="90 protein"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/fatTV"
        app:layout_constraintStart_toEndOf="@+id/caloriTV"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTV" />

    <TextView
        android:id="@+id/fatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="180 Yağ"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/karbonhidratTV"
        app:layout_constraintStart_toEndOf="@+id/proteinTv"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTV" />

    <TextView
        android:id="@+id/karbonhidratTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="180 Yağ"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fatTV"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTV" />

    <TextView
        android:id="@+id/foodDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Makarna güzeldir bol bol yiyiniz"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatTV" />
</androidx.constraintlayout.widget.ConstraintLayout>